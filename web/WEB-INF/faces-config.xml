<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ch.hearc.ig.odi.moviemanager.presentation.bundle.Messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    
    <!-- Navigation between the pages -->
    <navigation-rule>
        <from-view-id>/pages/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{personDetailBean.getAPerson(person)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/people/displayPerson.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{personDetailBean.getAPerson(person)}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/pages/people/displayPersonError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!--navigation-rule for the movieDetailsBean-->
    <navigation-rule>
        <navigation-case>
            <from-action>#{movieDetailsBean.showMovie(movie)}</from-action>          
            <from-outcome>show</from-outcome>
            <to-view-id>/pages/movies/movieDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieDetailsBean.showMovie(movie)}</from-action>          
            <from-outcome>error</from-outcome>
            <to-view-id>/pages/homePage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/people/displayPerson.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{peopleDisplayBean.processHomePage()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/homePage.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{peopleDisplayBean.processHomePage()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/pages/homePageError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation from the error pages -->
    <navigation-rule>
        <from-view-id>/pages/people/displayPersonError.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{peopleDisplayBean.processHomePage()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/homePage.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{peopleDisplayBean.processHomePage()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/pages/homePageError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
